	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	tools:context=".DateCalendarFragment" >

	<FrameLayout
		android:id="@+id/element_main"
		android:layout_width="match_parent"
		android:layout_height="320dp" >
	</FrameLayout>

	<FrameLayout
		android:id="@+id/element_detail"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/element_main" >
	</FrameLayout>
</RelativeLayout>